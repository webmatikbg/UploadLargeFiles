<div class="m-portlet m-portlet--bordered m-portlet--rounded  m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                    Parametri di ricerca
                </h3>
            </div>
        </div>
    </div>
    <div class="m-portlet__body">

        <div class="form-group m-form__group row">
            <label class="col-md-1 control-label">Descrizione</label>
            <div class="col-md-3">
                <input id="searchDescrizione" type="text" class="form-control" />
            </div>

            @if (User.IsInRole("Cliente") == false)
            {
                <label class="col-md-1 control-label">Cliente</label>
                <div class="col-md-3">
                    <select id="searchCliente" class="form-control"></select>
                </div>
            }
            @*<label class="col-md-1 control-label">Anno</label>
            <div class="col-md-1">
                <input class="form-control" type="number" min="0" max="3000" name="searchAnno" id="searchAnno" value="@DateTime.Now.Year" />
            </div>*@
            <label class="col-md-1 control-label">Caricato da</label>
            <div class="col-md-3">
                <select class="form-control" id="searchOwner" name="searchOwner">
                    <option value="">Tutti</option>
                    <option value="Professionista">Professionista</option>
                    <option value="Cliente">Cliente</option>
                </select>
            </div>
        </div>

        <div class="form-group m-form__group row">
            <div class="offset-lg-4 col-lg-2">
                <button class="btn btn-primary btn-block btnCerca" type="submit">Cerca</button>
            </div>
            <div class="col-lg-2">
                <button class="btn btn-warning btn-block" type="button" onclick="window.location.reload()">Pulisci</button>
            </div>
        </div>
    </div>
</div>